{% extends 'theme.twig' %}
{% block content %}
<div class='page'>
  <div class='wrapper'>
    <h1>{{ post.title }}</h1>
    <div class='post-content-body'>{{ post.content }}</div>
    {% if states %}
    I live in
    <select id='state_select'>
      {% for state in states %}
      {% if state.state_default == 1 %}
      <option data-opts='{{ state.state_name|lower }}-opts' selected='true' value='{{ state.state_name }}'>{{ state.state_name }}</option>
      {% else %}
      <option data-opts='{{ state.state_name|lower }}-opts' value='{{ state.state_name}}'>{{ state.state_name }}</option>
      {% endif %}
      {% endfor %}
    </select>
    {% for state in states %}
    <div class='state-opts {{ state.state_name|lower}}-opts {% if state.state_default == 1 %}active{% endif %}'>
      and I'd like a quote for
      <select class='product_select'>
        <option disabled selected></option>
        {% for product in state.state_products %}
        <option data-href='{{product.product_link}}' value='{{product.product_name}}'>{{product.product_name}}</option>
        {% endfor %}
      </select>
      insurance.
    </div>
    {% endfor %}
    <a class='button inactive' href='#' id='start_quote' target='new'>Start Quote</a>
    {% endif %}
  </div>
</div>
{% endblock %}
